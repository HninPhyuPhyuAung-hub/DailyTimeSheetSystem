<div class="custom-card">
    <div class="row">
        <div class="col-md-offset-0">

            <span class="v-bottom" style="font-size:18px;font-weight:500;color:#428af5; padding-right:1250px;">
                <h1>Daily Time Sheet</h1>
            </span>

            <button id="addnotice" type="button" class="btn btn-primary btn-sm btn-rounded btnmain" style="background-color:#0000ff;border-color:#47d147;border-color:black" onclick="InsertLeave()" title="Add New"><i class="fa fa-plus"></i>Add New Daily Sheet</button>
        </div>
    </div>
    <br />
    <div class="container-fluid">
        <table id="" class="leavedetail table table-bordered table-striped table-hover" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Date</th>
                    <th>Revenue Hour</th>
                    <th>Maintenance Hour</th>
                    <th>Warranty Hour</th>
                    <th>Expenses Hour</th>
